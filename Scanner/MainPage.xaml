                                                    <ToggleMenuFlyoutItem Text="Kai 8" Tag="1.4230" v1809:CornerRadius="2" Click="SetFixedAspectRatio"/>
                                                    <ToggleMenuFlyoutItem Text="Kai 16" Tag="1.4054" v1809:CornerRadius="2" Click="SetFixedAspectRatio"/>
                                                    <ToggleMenuFlyoutItem Text="Kai 32" Tag="1.4230" v1809:CornerRadius="2" Click="SetFixedAspectRatio"/>
