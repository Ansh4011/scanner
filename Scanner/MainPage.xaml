        <controlsxaml:TeachingTip
            x:Name="TeachingTipDevices"
            x:Uid="TeachingTipDevices"
            PlacementMargin="4"
            Title="Select a scanner"
            Subtitle="If your scanner doesn't show up within three minutes, you might need to add it in the settings app first."
            ActionButtonContent="Launch settings"
            IsLightDismissEnabled="True"
            Target="{Binding ElementName=ButtonDevices}"
            PreferredPlacement="BottomRight" 
            ActionButtonClick="TeachingTipDevices_ActionButtonClick"/>

        <controlsxaml:TeachingTip
            x:Name="TeachingTipEmpty"
            IsLightDismissEnabled="True"
            PlacementMargin="4"/>

        <controlsxaml:TeachingTip
            x:Name="TeachingTipFeedback"
            IsLightDismissEnabled="False"
            PlacementMargin="4"
            Title="Are you enjoying the app?"
            Subtitle="We would love to hear from you:">
            <controlsxaml:TeachingTip.IconSource>
                <controlsxaml:FontIconSource Glyph="&#xEB52;"/>
            </controlsxaml:TeachingTip.IconSource>

            <TextBlock TextWrapping="WrapWholeWords" Style="{ThemeResource BodyTextBlockStyle}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,12,0,0">
                            <Span>
                                <Run x:Uid="RunSettingsBeforeFeedbackLink" xml:space="preserve">Use the </Run>
                                <Hyperlink x:Name="HyperlinkFeedbackHub" UnderlineStyle="None" Click="HyperlinkFeedbackHub_Click">Feedback Hub<Run FontFamily="Segoe MDL2 Assets" Text="  &#xE8AD; " FontSize="12"/></Hyperlink>
                                <Run x:Uid="RunSettingsAfterFeedbackLink" xml:space="preserve"> to request new features, report bugs and vote on suggestions or </Run>
                                <Hyperlink x:Name="HyperlinkRate" UnderlineStyle="None" Click="HyperlinkRate_Click">rate Scanner in the Microsoft Store</Hyperlink>
                                <Run x:Uid="RunSettingsAfterRateLink" xml:space="preserve"> to help others decide whether this is the right app for them.</Run>
                            </Span>
            </TextBlock>
        </controlsxaml:TeachingTip>

        <controlsxaml:TeachingTip
            x:Name="TeachingTipScope"
            x:Uid="TeachingTipScope"
            PlacementMargin="4"
            PreferredPlacement="BottomLeft"
            IsLightDismissEnabled="True"
            ActionButtonContent="Entire document"
            CloseButtonContent="Just this image"
            ActionButtonClick="TeachingTipScope_ActionButtonClick"
            CloseButtonClick="TeachingTipScope_CloseButtonClick"/>

        <controlsxaml:TeachingTip
            x:Name="TeachingTipRename"
            x:Uid="TeachingTipRename"
            PlacementMargin="4"
            Title="Rename"
            Subtitle="Enter a new name for the file:"
            ActionButtonContent="Confirm"
            ActionButtonClick="TeachingTipRename_ActionButtonClick"
            CloseButtonContent="Cancel"
            Closed="TeachingTipRename_Closed"
            IsLightDismissEnabled="True"
            PreferredPlacement="Bottom" 
            Target="{Binding ElementName=ButtonRename}">
            <TextBox x:Name="TextBoxRename" Margin="0,10,0,0" KeyDown="TextBoxRename_KeyDown"/>
        </controlsxaml:TeachingTip>

        <controlsxaml:TeachingTip
            x:Name="TeachingTipDelete"
            x:Uid="TeachingTipDelete"
            PlacementMargin="4"
            Title="Are you sure?"
            Subtitle="The image will be deleted permanently."
            ActionButtonContent="Confirm"
            ActionButtonClick="TeachingTipDelete_ActionButtonClick"
            CloseButtonContent="Cancel"
            Closed="TeachingTipDelete_Closed"
            IsLightDismissEnabled="True"
            PreferredPlacement="Bottom" 
            Target="{Binding ElementName=ButtonDelete}"/>

        <controlsxaml:TeachingTip
            x:Name="TeachingTipManageDelete"
            x:Uid="TeachingTipManageDelete"
            PlacementMargin="4"
            Title="Are you sure?"
            Subtitle="The selected images will be deleted permanently."
            ActionButtonContent="Confirm"
            ActionButtonClick="TeachingTipManageDelete_ActionButtonClick"
            CloseButtonContent="Cancel"
            Closed="TeachingTipManageDelete_Closed"
            IsLightDismissEnabled="True"
            PreferredPlacement="Bottom" 
            Target="{Binding ElementName=ButtonLeftPaneManageDelete}"/>

        <ContentDialog x:Name="ContentDialogDebug" CloseButtonText="Close">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xEBE8;" FontSize="24" Margin="0,0,8,0"/>
                    <TextBlock Text="Debug Menu" FontWeight="Bold" FontSize="24"/>
                </StackPanel>
                <ScrollViewer VerticalScrollMode="Auto" MaxHeight="300" Padding="0,0,24,0">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="Scan from image files" Style="{StaticResource BaseTextBlockStyle}" FontSize="20" Margin="0,0,0,16"/>
                        <TextBlock Text="Target format" Margin="0,0,0,6"/>
                        <StackPanel Orientation="Horizontal">
                            <ComboBox x:Name="ComboBoxDebugFormat" Width="150" SelectionChanged="ComboBoxDebugFormat_SelectionChanged"/>
                            <CheckBox x:Name="CheckBoxDebugStartFresh" Content="Start fresh" Margin="24,0,0,0"/>
                        </StackPanel>
                        <Button x:Name="ButtonDebugSelectFiles" Content="Select files" Click="ButtonDebugSelectFiles_Click" Margin="0,6,0,0"/>

