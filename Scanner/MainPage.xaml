            <Storyboard x:Name="StoryboardToolbarTransitionFromSpecial">
                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="StackPanelTopToolbarEditingSpecial" Storyboard.TargetProperty="Visibility">
                    <DiscreteObjectKeyFrame KeyTime="0:0:0.15">
                        <DiscreteObjectKeyFrame.Value>Collapsed</DiscreteObjectKeyFrame.Value>
                    </DiscreteObjectKeyFrame>
                </ObjectAnimationUsingKeyFrames>
