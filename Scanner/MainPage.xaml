                                                </controls:DropShadowPanel>
                                                <StackPanel Orientation="Vertical" Margin="16,0,0,0" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                                                    <TextBlock TextTrimming="CharacterEllipsis" Text="{Binding ScanFile.DisplayName}" Style="{ThemeResource BodyTextBlockStyle}" MaxLines="2" TextWrapping="WrapWholeWords" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                                                    <Grid CornerRadius="2" BorderBrush="{ThemeResource CustomSeparatorBorderThemeBrush}" BorderThickness="1" Background="{ThemeResource SystemControlBackgroundAltMediumLowBrush}" Padding="4,2,4,2" HorizontalAlignment="Left" Margin="0,6,0,0" Visibility="{Binding DisplayedFolder, Converter={StaticResource StringNotEmptyVisibilityConverter}}">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="20"/>
                                                            <ColumnDefinition/>
                                                        </Grid.ColumnDefinitions>

                                                        <FontIcon Grid.Column="0" FontSize="14" Foreground="{ThemeResource SystemControlForegroundBaseMediumHighBrush}" RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignTopWithPanel="True" Glyph="&#xE838; " HorizontalAlignment="Left" VerticalAlignment="Stretch"/>
                                                        <TextBlock Grid.Column="1" Foreground="{ThemeResource SystemControlForegroundBaseMediumHighBrush}" Text="{Binding DisplayedFolder}" Style="{ThemeResource CaptionTextBlockStyle}" TextTrimming="CharacterEllipsis" HorizontalAlignment="Stretch" MaxLines="1"/>
                                                    </Grid>
                                                </StackPanel>
                                            </Grid>
                                        </ListViewItem>
                                    </DataTemplate>
                                </ListView.ItemTemplate>

                                <ListView.ItemContainerTransitions>
                                    <TransitionCollection>
                                        <AddDeleteThemeTransition/>
                                        <ReorderThemeTransition/>
                                    </TransitionCollection>
                                </ListView.ItemContainerTransitions>
                            </ListView>
                            <GridView x:Name="LeftPaneGridViewManage" HorizontalAlignment="Left" SelectionMode="Single" CanDragItems="True" CanReorderItems="True" AllowDrop="True" Padding="20,0,20,0" ScrollViewer.VerticalScrollMode="Disabled" ScrollViewer.HorizontalScrollMode="Disabled" SelectionChanged="LeftPaneManage_SelectionChanged" DragItemsCompleted="LeftPaneManage_DragItemsCompleted" DragOver="LeftPaneGridViewManage_DragOver" Drop="LeftPaneGridViewManage_Drop" DragLeave="LeftPaneGridViewManage_DragLeave">
                                <GridView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <ItemsWrapGrid HorizontalAlignment="Center"
                                                        MaximumRowsOrColumns="2"
                                                        Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </GridView.ItemsPanel>

                                <GridView.ItemTemplate>
                                    <DataTemplate x:DataType="local:ScanResultElement">
                                        <GridViewItem x:Name="LeftPaneGridViewManageItem" Style="{StaticResource GridViewItemStyleRounded}" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Height="{Binding ViewportWidth, ElementName=ScrollViewerLeftPaneManage, Converter={StaticResource PaneManageItemConverter}}" Width="{Binding ViewportWidth, ElementName=ScrollViewerLeftPaneManage, Converter={StaticResource PaneManageItemConverter}}" AutomationProperties.Name="{Binding ItemDescriptor}">
                                            <Grid>
                                                <Frame Padding="8">
                                                    <controls:DropShadowPanel Style="{ThemeResource DropShadowPanelThemedStyle}" Padding="12" ShadowOpacity="{Binding ElementName=LeftPaneGridViewManageItem, Path=IsSelected, Converter={StaticResource ButtonShadowConverter}}" BlurRadius="10" VerticalAlignment="Center" HorizontalAlignment="Center" OffsetY="3">
                                                        <Frame CornerRadius="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                            <Image HorizontalAlignment="Center" VerticalAlignment="Center" Source="{Binding Thumbnail}"/>
                                                        </Frame>
