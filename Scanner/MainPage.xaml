                                                        <CompositeTransform ScaleX="1" ScaleY="1"/>
                                                    </FontIcon.RenderTransform>
                                                </FontIcon>
                                                <FontIcon x:Name="FontIconSaveCopyDone" FontFamily="Segoe MDL2 Assets" Glyph="&#xEC61;" FontSize="16" RenderTransformOrigin="0.5,0.5">
