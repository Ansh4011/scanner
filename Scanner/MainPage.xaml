    </Page.Resources>

    <!-- - - - - - - - - - - - - - - - - - - -  - - - - - - - - - - - - - - - - - - - - -->
    <!-- - - - - - - - - - - - - - - - -  PAGE CONTENT  - - - - - - - - - - - - - - - - -->
    <!-- - - - - - - - - - - - - - - - - - - -  - - - - - - - - - - - - - - - - - - - - -->
    <Grid x:Name="GridRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="ColumnLeftPane" Width="3*" MinWidth="300" MaxWidth="350"/>
            <ColumnDefinition x:Name="ColumnContentPane" Width="7*"/>
            <ColumnDefinition x:Name="ColumnRightPane" Width="3*" MinWidth="0" MaxWidth="0"/>
        </Grid.ColumnDefinitions>

        <!-- Left Pane -->
        <Grid x:Name="LeftPane" Grid.Column="0" Background="{ThemeResource SystemControlAcrylicWindowBrush}">
            <Grid.BackgroundTransition>
                <BrushTransition/>
            </Grid.BackgroundTransition>

            <FlipView x:Name="FlipViewLeftPane" Style="{StaticResource FlipViewStyleNoButtons}" CornerRadius="0" Background="Transparent" IsTabStop="False" SelectionChanged="FlipViewLeftPane_SelectionChanged">
                <!-- Scan Options -->
                <Grid x:Name="LeftPaneScanOptions" x:Uid="LeftPaneScanOptions">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="75"/>
                    </Grid.RowDefinitions>

                    <RelativePanel x:Name="RelativePanelLeftPaneScan" Grid.Row="0" VerticalAlignment="Stretch" PointerWheelChanged="IgnorePointerWheel">
                        <Grid x:Name="GridLeftPaneScanHeader" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True">
                            <controls:DropShadowPanel x:Name="DropShadowPanelGridLeftPaneScanHeader" Opacity="{Binding ElementName=ScrollViewerLeftPaneScan, Path=VerticalOffset, Converter={StaticResource HeaderScrollShadowConverter}}" Style="{ThemeResource DropShadowPanelThemedStyle}" BlurRadius="15" VerticalAlignment="Top" Margin="16,0,16,0">
                                <Rectangle x:Name="RectangleGridLeftPaneScanOptions" Fill="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="{Binding ElementName=ScrollViewerLeftPaneScan, Path=ViewportWidth}" Height="{Binding ElementName=FrameLeftPaneScanHeader, Path=ActualHeight}"/>
                            </controls:DropShadowPanel>
                            <Rectangle x:Name="RectangleLeftPaneScanHeaderBackground" Fill="{ThemeResource SystemControlAcrylicWindowBrush}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                            <Frame x:Name="FrameLeftPaneScanHeader" VerticalAlignment="Top" Padding="0,30,0,0">
                                <TextBlock x:Uid="HeadingScanner" Text="Scanner" FontWeight="Bold" FontSize="32" HorizontalAlignment="Stretch" VerticalAlignment="Top" Padding="24,0,24,8" AutomationProperties.HeadingLevel="Level1"/>
                            </Frame>
                        </Grid>

                        <ScrollViewer x:Name="ScrollViewerLeftPaneScan" Background="Transparent" VerticalScrollBarVisibility="Auto" RelativePanel.Below="GridLeftPaneScanHeader" RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" AutomationProperties.LandmarkType="Form">
                            <StackPanel Orientation="Vertical" Padding="24,0,24,12" SizeChanged="StackPanel_SizeChanged">
                                <Frame x:Name="FrameLeftPaneScanSource" Margin="0,8,0,0">
                                    <StackPanel Orientation="Vertical">
                                        <RelativePanel>
                                            <TextBlock x:Name="TextBlockSource" x:Uid="HeadingScanOptionsSource" Margin="0,8,0,6" Style="{StaticResource BaseTextBlockStyle}" RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignLeftWithPanel="True" AutomationProperties.HeadingLevel="Level2"/>
                                            <Button x:Name="ButtonDevices" x:Uid="ButtonScanOptionsDevices" Padding="0" TabIndex="1" Style="{ThemeResource TextBlockButtonStyle}" Click="ButtonDevices_Click" Visibility="{Binding Visibility, ElementName=StackPanelContentPaneText, Converter={StaticResource NegativeVisibilityConverter}}" RelativePanel.RightOf="TextBlockSource" RelativePanel.AlignBottomWithPanel="True">
                                                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE946;" Margin="8,8,8,7" FontSize="{Binding ElementName=TextBlockSource, Path=FontSize}"/>
                                            </Button>
                                            <Grid x:Name="GridTextScannerCount" Opacity="0" CornerRadius="2" Margin="0,0,0,3" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignBottomWithPanel="True">
                                                <Grid.OpacityTransition>
                                                    <ScalarTransition Duration="0:0:1"/>
                                                </Grid.OpacityTransition>

                                                <Frame x:Name="FrameTextScannerCountBackground" CornerRadius="2" Opacity="0" Background="{ThemeResource SystemAccentColor}" BorderBrush="Transparent" BorderThickness="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                                <Frame CornerRadius="2" Background="{ThemeResource SystemControlBackgroundAltMediumLowBrush}" BorderBrush="{ThemeResource CustomSeparatorBorderThemeBrush}" BorderThickness="1">
                                                    <TextBlock x:Name="TextScannerCount" Opacity="0.6" Style="{StaticResource BodyTextBlockStyle}" Padding="6,2,6,2" TextAlignment="Right" MaxLines="1"/>
                                                </Frame>
                                            </Grid>
                                        </RelativePanel>
                                        <ComboBox x:Name="ComboBoxScanners" HorizontalAlignment="Stretch" Margin="0,6,0,0" TabIndex="0" ItemsSource="{x:Bind scannerList}" SelectionChanged="ComboBoxScanners_SelectionChanged" AutomationProperties.Name="{Binding ElementName=TextBlockSource, Path=Text}" AutomationProperties.IsRequiredForForm="True">
                                            <ComboBoxItem x:Name="ComboBoxItemScannerIndicator" IsEnabled="False" VerticalContentAlignment="Bottom" Visibility="Collapsed">
                                                <StackPanel Orientation="Vertical">
                                                    <TextBlock x:Uid="TextScannerIndicator" Style="{StaticResource CaptionTextBlockStyle}" Margin="0,0,0,3"/>
                                                    <controlsxaml:ProgressBar IsIndeterminate="True" Opacity="0.6"/>
                                                </StackPanel>
                                            </ComboBoxItem>
                                        </ComboBox>
                                    </StackPanel>
                                </Frame>

                                <Frame x:Name="FrameLeftPaneScanSourceMode" Margin="0,12,0,0">
                                    <StackPanel Orientation="Vertical">
                                        <Grid>
                                            <RadioButton x:Name="RadioButtonSourceAutomatic" x:Uid="OptionScanOptionsSourceAutomatic" IsEnabled="False" GroupName="RadioButtonGroupSource" HorizontalAlignment="Stretch" Checked="RadioButtonSourceMode_Checked"/>
                                            <FontIcon x:Name="FontIconAutoPreviewSupported" x:Uid="TextScanOptionsSourcePreviewSupported" FontSize="16" FontFamily="Segoe MDL2 Assets" Glyph="&#xE773;" HorizontalAlignment="Right" Opacity="0.3" Visibility="Collapsed"/>
                                        </Grid>
                                        <Grid>
                                            <RadioButton x:Name="RadioButtonSourceFlatbed" x:Uid="OptionScanOptionsSourceFlatbed" IsEnabled="False" GroupName="RadioButtonGroupSource" HorizontalAlignment="Stretch" Checked="RadioButtonSourceMode_Checked"/>
                                            <FontIcon x:Name="FontIconFlatbedPreviewSupported" x:Uid="TextScanOptionsSourcePreviewSupported" FontSize="16" FontFamily="Segoe MDL2 Assets" Glyph="&#xE773;" HorizontalAlignment="Right" Opacity="0.3" Visibility="Collapsed"/>
                                        </Grid>
                                        <Grid>
                                            <RadioButton x:Name="RadioButtonSourceFeeder" x:Uid="OptionScanOptionsSourceFeeder" IsEnabled="False" GroupName="RadioButtonGroupSource" HorizontalAlignment="Stretch" Checked="RadioButtonSourceMode_Checked"/>
                                            <FontIcon x:Name="FontIconFeederPreviewSupported" x:Uid="TextScanOptionsSourcePreviewSupported" FontSize="16" FontFamily="Segoe MDL2 Assets" Glyph="&#xE773;" HorizontalAlignment="Right" Opacity="0.3" Visibility="Collapsed"/>
                                        </Grid>
                                    </StackPanel>
                                </Frame>

                                <Frame x:Name="FrameLeftPaneScanColor" Margin="0,48,0,0" Visibility="Collapsed" Opacity="0">
                                    <StackPanel x:Name="StackPanelColor" Orientation="Vertical">
                                        <TextBlock x:Name="HeadingScanOptionsColor" x:Uid="HeadingScanOptionsColor" Style="{StaticResource BaseTextBlockStyle}" Margin="0,0,0,6" AutomationProperties.HeadingLevel="Level2"/>
                                        <RadioButton x:Name="RadioButtonColorModeColor" x:Uid="OptionScanOptionsColorColor" GroupName="RadioButtonGroupColor" IsEnabled="False" HorizontalAlignment="Stretch"/>
                                        <RadioButton x:Name="RadioButtonColorModeGrayscale" x:Uid="OptionScanOptionsColorGrayscale" GroupName="RadioButtonGroupColor" IsEnabled="False" HorizontalAlignment="Stretch"/>
                                        <RadioButton x:Name="RadioButtonColorModeMonochrome" x:Uid="OptionScanOptionsColorMonochrome" GroupName="RadioButtonGroupColor" IsEnabled="False" HorizontalAlignment="Stretch"/>
                                    </StackPanel>
                                </Frame>

                                <Frame x:Name="FrameLeftPaneResolution" Margin="0,48,0,0" IsEnabled="True" Visibility="Collapsed" Opacity="0">
                                    <StackPanel x:Name="StackPanelResolution" Orientation="Vertical">
                                        <TextBlock x:Name="HeadingScanOptionsResolution" x:Uid="HeadingScanOptionsResolution" Style="{StaticResource BaseTextBlockStyle}" Margin="0,0,0,6" AutomationProperties.HeadingLevel="Level2"/>
                                        <ComboBox x:Name="ComboBoxResolution" ItemsSource="{x:Bind resolutions}" Margin="0,6,0,0" HorizontalAlignment="Stretch" AutomationProperties.Name="{Binding ElementName=HeadingScanOptionsResolution, Path=Text}"/>
                                    </StackPanel>
                                </Frame>

                                <Frame x:Name="FrameLeftPaneScanFeeder" Margin="0,48,0,0" Visibility="Collapsed" Opacity="0">
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock x:Name="HeadingScanOptionsMoreOptions" x:Uid="HeadingScanOptionsMoreOptions" Style="{StaticResource BaseTextBlockStyle}" Margin="0,0,0,6" AutomationProperties.HeadingLevel="Level2"/>
                                        <CheckBox x:Name="CheckBoxAllPages" x:Uid="OptionScanOptions10Pages" IsChecked="True" IsEnabled="True"/>
                                        <CheckBox x:Name="CheckBoxDuplex" x:Uid="OptionScanOptionsDuplex" IsChecked="False" IsEnabled="False"/>
                                    </StackPanel>
                                </Frame>

                                <Frame x:Name="FrameLeftPaneScanFormat" Margin="0,48,0,0">
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock x:Name="HeadingScanOptionsFormat" x:Uid="HeadingScanOptionsFormat" Style="{StaticResource BaseTextBlockStyle}" Margin="0,0,0,6" AutomationProperties.HeadingLevel="Level2"/>
                                        <ComboBox x:Name="ComboBoxFormat" Margin="0,6,0,0" ItemsSource="{x:Bind formats}" HorizontalAlignment="Stretch" IsEnabled="{Binding ElementName=ComboBoxScanners, Path=SelectedIndex, Converter={StaticResource IsItemSelectedConverter}, FallbackValue=False}" SelectionChanged="ComboBoxFormat_SelectionChanged" AutomationProperties.Name="{Binding ElementName=HeadingScanOptionsFormat, Path=Text}"/>
                                    </StackPanel>

                                    <Frame.Transitions>
                                        <TransitionCollection>
                                            <RepositionThemeTransition/>
                                        </TransitionCollection>
                                    </Frame.Transitions>
                                </Frame>
                            </StackPanel>
                        </ScrollViewer>
                    </RelativePanel>
                    <Grid x:Name="GridLeftPaneFooter" Grid.Row="1" PointerWheelChanged="IgnorePointerWheel">
                        <controls:DropShadowPanel x:Name="DropShadowPanelGridLeftPaneFooter" Style="{ThemeResource DropShadowPanelThemedStyle}" BlurRadius="15" VerticalAlignment="Top" Margin="16,0,16,0">
                            <Rectangle x:Name="RectangleGridLeftPaneFooter" Fill="{ThemeResource ApplicationPageBackgroundThemeBrush}" Width="{Binding ElementName=ScrollViewerLeftPaneScan, Path=ViewportWidth}" Height="{Binding ElementName=GridLeftPaneFooter, Path=ActualHeight}"/>
                        </controls:DropShadowPanel>
                        <Grid x:Name="GridLeftPaneFooterContent" Padding="24,0,24,0" Background="{ThemeResource SystemControlAcrylicWindowBrush}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" AutomationProperties.LandmarkType="Main">
                            <controls:DropShadowPanel x:Name="DropShadowPanelLeftPaneScanButton" Style="{ThemeResource DropShadowPanelThemedStyle}" ShadowOpacity="{Binding ElementName=ButtonLeftPaneScan, Path=IsEnabled, Converter={StaticResource ButtonShadowConverter}}" VerticalAlignment="Center" BlurRadius="10" OffsetY="5" HorizontalAlignment="Right">
                                <controlsxaml:SplitButton x:Name="ButtonLeftPaneScan" Style="{StaticResource SplitButtonAccentRevealStyle}" Foreground="{ThemeResource SystemColorHighlightTextColor}" Padding="12,8,12,8" MinWidth="80" IsEnabled="False" Click="ButtonLeftPaneScan_Click" AutomationProperties.Name="{Binding ElementName=TextBlockButtonScan, Path=Text}">
                                    <Grid>
                                        <StackPanel Orientation="Horizontal">
                                            <FontIcon x:Name="FontIconButtonScanAdd" FontFamily="Segoe MDL2 Assets" Glyph="&#xE710;" Margin="0,0,8,0" FontSize="12" Height="{Binding ActualHeight, ElementName=TextBlockButtonScan}" Opacity="{Binding Opacity, ElementName=TextBlockButtonScan}" Visibility="Collapsed"/>
                                            <FontIcon x:Name="FontIconButtonScanStartFresh" FontFamily="Segoe MDL2 Assets" Glyph="&#xE7C3;" Margin="0,0,8,0" FontSize="12" Height="{Binding ActualHeight, ElementName=TextBlockButtonScan}" Opacity="{Binding Opacity, ElementName=TextBlockButtonScan}" Visibility="Collapsed"/>
                                            <TextBlock x:Name="TextBlockButtonScan" x:Uid="ButtonScanOptionsScan" Style="{StaticResource BaseTextBlockStyle}" Opacity="{Binding IsEnabled, ElementName=ButtonLeftPaneScan, Converter={StaticResource ButtonTextOpacityConverter}}"/>
                                        </StackPanel>
                                    </Grid>

                                    <controlsxaml:SplitButton.Flyout>
                                        <MenuFlyout Placement="Bottom">
                                            <MenuFlyoutItem x:Name="MenuFlyoutItemButtonScan" x:Uid="ButtonScanOptionsScan" FontWeight="Bold" IsEnabled="True" Click="MenuFlyoutItemButtonScan_Click"/>
                                            <MenuFlyoutItem x:Name="MenuFlyoutItemButtonScanFresh" x:Uid="ButtonScanOptionsScanFresh" FontWeight="Normal" Click="ButtonScanFresh_Click">
                                                <MenuFlyoutItem.Icon>
                                                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE7C3;"/>
                                                </MenuFlyoutItem.Icon>
