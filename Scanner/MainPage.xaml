                                        <InkToolbar x:Name="InkToolbarDraw" TargetInkCanvas="{Binding ElementName=InkCanvasEditDraw}" HorizontalAlignment="Right" Visibility="Visible" InitialControls="PensOnly">
                                            <InkToolbarEraserButton/>
                                        </InkToolbar>
                                        <InkToolbarCustomPenButton x:Name="ButtonDrawTouch" x:Uid="ButtonDrawTouch" Visibility="Collapsed" ToolTipService.ToolTip="Draw with touch" Click="ButtonDrawTouch_Click">
                                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xED5F;" FontSize="16"/>
                                        </InkToolbarCustomPenButton>
                                        <Custom:ToolbarSeparator/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <InkToolbarCustomPenButton  x:Name="ButtonSave" x:Uid="ButtonSave" Style="{StaticResource CustomInkToolbarCustomPenButtonHiddenIndicatorLeftStyle}" ToolTipService.ToolTip="Save" Click="ButtonSave_Click">
                                            <StackPanel Orientation="Horizontal" Margin="10,0,10,0">
                                                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE74E;" FontSize="16"/>
                                                <TextBlock Text="Save" Style="{ThemeResource BodyTextBlockStyle}" Margin="10,0,0,2" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </InkToolbarCustomPenButton>
                                        <InkToolbarCustomPenButton x:Name="ButtonSaveCopy" x:Uid="ButtonSaveCopy" Style="{StaticResource CustomInkToolbarCustomPenButtonHiddenIndicatorCenterStyle}" ToolTipService.ToolTip="Save as copy" Click="ButtonSaveCopy_Click">
                                            <Grid Padding="0" Margin="0">
                                                <FontIcon x:Name="FontIconSaveCopy" FontFamily="Segoe MDL2 Assets" Glyph="&#xEA35;" FontSize="16" RenderTransformOrigin="0.5,0.5">
