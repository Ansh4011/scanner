                                                        <CompositeTransform ScaleX="0" ScaleY="0"/>
                                                    </FontIcon.RenderTransform>
                                                </FontIcon>
                                            </Grid>
                                        </InkToolbarCustomPenButton>
                                        <InkToolbarCustomPenButton x:Name="ButtonDiscard" x:Uid="ButtonDiscard" Style="{StaticResource CustomInkToolbarCustomPenButtonHiddenIndicatorRightStyle}" ToolTipService.ToolTip="Discard changes" Click="ButtonDiscard_Click">
                                            <FontIcon x:Name="FontIconDiscard" FontFamily="Segoe MDL2 Assets" Glyph="&#xE711;" FontSize="16"/>
                                        </InkToolbarCustomPenButton>
