                    </DiscreteObjectKeyFrame>
                </ObjectAnimationUsingKeyFrames>
                <DoubleAnimation Storyboard.TargetName="FrameLeftPaneScanFeeder" Storyboard.TargetProperty="Opacity"
                                 To="0" Duration="0:0:0" BeginTime="0:0:0"/>
            </Storyboard>

            <Storyboard x:Name="StoryboardScanOptionsFeeder">
                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="FrameLeftPaneScanColor" Storyboard.TargetProperty="Visibility">
                    <DiscreteObjectKeyFrame KeyTime="0:0:0.0">
                        <DiscreteObjectKeyFrame.Value>Visible</DiscreteObjectKeyFrame.Value>
                    </DiscreteObjectKeyFrame>
                </ObjectAnimationUsingKeyFrames>
                <DoubleAnimation Storyboard.TargetName="FrameLeftPaneScanColor" Storyboard.TargetProperty="Opacity"
                                 To="1" Duration="0:0:0.25" BeginTime="0:0:0"/>

                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="FrameLeftPaneResolution" Storyboard.TargetProperty="Visibility">
                    <DiscreteObjectKeyFrame KeyTime="0:0:0.0">
                        <DiscreteObjectKeyFrame.Value>Visible</DiscreteObjectKeyFrame.Value>
                    </DiscreteObjectKeyFrame>
                </ObjectAnimationUsingKeyFrames>
                <DoubleAnimation Storyboard.TargetName="FrameLeftPaneResolution" Storyboard.TargetProperty="Opacity"
                                 To="1" Duration="0:0:0.25" BeginTime="0:0:0"/>

                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="FrameLeftPaneScanFeeder" Storyboard.TargetProperty="Visibility">
                    <DiscreteObjectKeyFrame KeyTime="0:0:0.0">
                        <DiscreteObjectKeyFrame.Value>Visible</DiscreteObjectKeyFrame.Value>
                    </DiscreteObjectKeyFrame>
                </ObjectAnimationUsingKeyFrames>
                <DoubleAnimation Storyboard.TargetName="FrameLeftPaneScanFeeder" Storyboard.TargetProperty="Opacity"
                                 To="1" Duration="0:0:0.25" BeginTime="0:0:0"/>
            </Storyboard>

            <Storyboard x:Name="StoryboardScannerAdded1" Completed="StoryboardScannerAdded1_Completed">
                <DoubleAnimation Storyboard.TargetName="FrameTextScannerCountBackground" Storyboard.TargetProperty="Opacity"
                                To="1" Duration="0:0:0.15"/>
            </Storyboard>

            <Storyboard x:Name="StoryboardScannerAdded2">
                <DoubleAnimation Storyboard.TargetName="FrameTextScannerCountBackground" Storyboard.TargetProperty="Opacity"
