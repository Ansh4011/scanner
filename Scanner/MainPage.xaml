                        <ExponentialEase Exponent="4.5" EasingMode="EaseOut"/>
                    </DoubleAnimation.EasingFunction>
                </DoubleAnimation>
                <DoubleAnimation Storyboard.TargetName="StackPanelTopToolbarEditing" Storyboard.TargetProperty="Opacity"
                                 To="1" Duration="0:0:0.1" BeginTime="0:0:0.2"/>
            </Storyboard>

            <Storyboard x:Name="StoryboardScanOptionsAuto">
                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="FrameLeftPaneScanColor" Storyboard.TargetProperty="Visibility">
