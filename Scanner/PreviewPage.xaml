<Page
    x:Class="Scanner.PreviewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:v1809="http://schemas.microsoft.com/winfx/2006/xaml/presentation?IsApiContractPresent(Windows.Foundation.UniversalApiContract, 7)" xmlns:local="using:Scanner"
    xmlns:controlsxaml="using:Microsoft.UI.Xaml.Controls"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"  
    xmlns:behaviors="using:Microsoft.Toolkit.Uwp.UI.Animations.Behaviors"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" 
    NavigationCacheMode="Disabled" 
    KeyDown="Page_KeyDown" Loaded="Page_Loaded">

    <Page.Resources>
        <v1809:Style x:Name="RoundedButtonStyle" TargetType="Button">
            <Setter Property="CornerRadius" Value="2"/>
        </v1809:Style>
        <v1809:Style x:Name="RoundedContentDialog" TargetType="ContentDialog">
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Background" Value="{ThemeResource SystemControlAcrylicElementBrush}"/>
        </v1809:Style>
        <v1809:Style x:Name="RoundedButtonAccentStyle" TargetType="Button">
            <Setter Property="Foreground" Value="{ThemeResource SystemColorHighlightTextColor}"/>
            <Setter Property="Background" Value="{ThemeResource SystemControlHighlightAccentRevealBackgroundBrush}"/>
            <Setter Property="CornerRadius" Value="2"/>
        </v1809:Style>

        <local:TopThicknessConverter x:Key="TopThicknessConverter"/>
        <local:NegativeTopThicknessConverter x:Key="NegativeTopThicknessConverter"/>

        <Storyboard x:Name="StoryboardError">
            <DoubleAnimation
                Storyboard.TargetName="TextBlockPreview"
                Storyboard.TargetProperty="Opacity"
                From="0.0" To="1.0"
                Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation
                Storyboard.TargetName="FontIconError"
                Storyboard.TargetProperty="Opacity"
                From="0.0" To="1.0"
                Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation
                Storyboard.TargetName="ProgressBarPreview"
                Storyboard.TargetProperty="Opacity"
                From="1.0" To="0.0"
                Duration="0:0:3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)"
                             Storyboard.TargetName="TextBlockPreview" Duration="0:0:1" From="0.0" To="30.0">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)"
                             Storyboard.TargetName="FontIconError" Duration="0:0:1" From="0.0" To="-55.0">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </Page.Resources>


    <Grid x:Name="GridPreviewPage">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <v1809:Grid.BackgroundTransition>
                <v1809:BrushTransition/>
            </v1809:Grid.BackgroundTransition>

            <TextBlock x:Name="TextBlockPreview" Style="{StaticResource SubtitleTextBlockStyle}" Text="An error occurred. Please try again." Opacity="0.0" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock.RenderTransform>
                    <CompositeTransform/>
                </TextBlock.RenderTransform>
            </TextBlock>
            <controlsxaml:ProgressBar x:Name="ProgressBarPreview" IsIndeterminate="True" ShowError="False" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <FontIcon x:Name="FontIconError" FontFamily="Segoe MDL2 Assets" Glyph="&#xE783;" Opacity="0.0" FontSize="64" HorizontalAlignment="Center" VerticalAlignment="Center">
                <FontIcon.RenderTransform>
                    <CompositeTransform/>
                </FontIcon.RenderTransform>
            </FontIcon>

            <ScrollViewer x:Name="ScrollViewerDummy" Margin="{Binding ActualHeight, ElementName=GridPreviewHeader, Converter={StaticResource TopThicknessConverter}}" IsEnabled="False">
                <Rectangle VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
            </ScrollViewer>

            <RelativePanel x:Name="RelativePanelPreview">
                <ScrollViewer x:Name="ScrollViewerPreview" MinZoomFactor="1" MaxZoomFactor="3" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" ZoomMode="Enabled" RelativePanel.AlignBottomWithPanel="True" RelativePanel.AlignTopWithPanel="True"
                              HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="{Binding ElementName=GridPreviewHeader, Path=ActualHeight, Converter={StaticResource TopThicknessConverter}}"
                              Padding="{Binding ElementName=GridPreviewHeader, Path=ActualHeight, Converter={StaticResource NegativeTopThicknessConverter}}">
                    <Image  x:Name="ImagePreview" Margin="{Binding ActualHeight, ElementName=GridPreviewHeader, Converter={StaticResource TopThicknessConverter}}"
                            MaxWidth="{Binding ViewportWidth, ElementName=ScrollViewerDummy}"
                            MaxHeight="{Binding ViewportHeight, ElementName=ScrollViewerDummy}"/>
                </ScrollViewer>
                <Grid x:Name="GridPreviewHeader" Padding="0,32,0,0" RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" Background="{ThemeResource SystemControlAcrylicElementBrush}">
                    <v1809:Grid.BackgroundTransition>
                        <v1809:BrushTransition/>
                    </v1809:Grid.BackgroundTransition>

                    <StackPanel Orientation="Horizontal" Padding="0,0,0,8">
                        <Button Style="{ThemeResource TextBlockButtonStyle}" Foreground="{ThemeResource ApplicationForegroundThemeBrush}" VerticalAlignment="Stretch" Click="ButtonBack_Click">
                            <SymbolIcon Symbol="Back" Margin="14,8,14,8" VerticalAlignment="Center"/>
                        </Button>
                        <TextBlock x:Name="TextBlockPreviewHeader" x:Uid="TextBlockPreviewHeader" Text="Preview" FontSize="32" FontWeight="Bold" Margin="6,0,0,0" VerticalAlignment="Top" Padding="0,0,0,0"/>
                    </StackPanel>
                </Grid>
            </RelativePanel>
        </Grid>
    </Grid>
</Page>
