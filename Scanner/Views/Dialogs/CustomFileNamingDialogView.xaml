                                    </StackPanel>
                                </controls:Case>

                                <!-- Date -->
                                <controls:Case Value="DATE">
                                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                        <FontIcon Style="{StaticResource FontIconStyleSegoeFluentIcons}" Glyph="&#xE163;" FontSize="16"/>
                                        <TextBlock Text="Date" Style="{StaticResource CaptionTextBlockStyle}" />
